{
  "$schema": "https://developer.microsoft.com/json-schemas/office-js/add-in-manifest.schema.json",
  "manifestVersion": "1.1",
  "id": "622a3c48-8b28-40b3-ad87-f86c2467bd57",
  "version": "1.0.0.0",
  "providerName": "Outlook Auto-Unsubscriber",
  "defaultLocale": "en-US",
  "displayName": {
    "default": "Auto-Unsubscriber"
  },
  "description": {
    "default": "Automatically scan your mailbox for unsubscribe links and manage email subscriptions"
  },
  "iconUrl": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/assets/icon-64.png",
  "highResolutionIconUrl": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/assets/icon-128.png",
  "supportUrl": "https://github.com/danrhodes/Outlook-auto-unsubscriber",
  "hosts": [
    {
      "type": "Mailbox"
    }
  ],
  "requirements": {
    "sets": [
      {
        "name": "Mailbox",
        "minVersion": "1.10"
      }
    ]
  },
  "formSettings": {
    "form": [
      {
        "formType": "read",
        "formFactor": "desktop",
        "sourceLocation": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/src/taskpane/taskpane.html"
      },
      {
        "formType": "read",
        "formFactor": "tablet",
        "sourceLocation": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/src/taskpane/taskpane.html"
      },
      {
        "formType": "read",
        "formFactor": "phone",
        "sourceLocation": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/src/taskpane/taskpane.html"
      }
    ]
  },
  "permissions": [
    {
      "name": "ReadWriteMailbox",
      "value": "ReadWriteMailbox"
    }
  ],
  "validDomains": [
    "danrhodes.github.io",
    "login.microsoftonline.com",
    "graph.microsoft.com"
  ],
  "extensionPoints": [
    {
      "type": "MessageReadCommandSurface",
      "officeTab": "TabDefault",
      "groups": [
        {
          "id": "msgReadGroup",
          "label": {
            "default": "Unsubscribe"
          },
          "controls": [
            {
              "id": "msgReadOpenPaneButton",
              "type": "button",
              "label": {
                "default": "Scan for Unsubscribe Links"
              },
              "icons": {
                "size16": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/assets/icon-16.png",
                "size32": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/assets/icon-32.png",
                "size80": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/assets/icon-80.png"
              },
              "supertip": {
                "title": {
                  "default": "Scan Mailbox"
                },
                "description": {
                  "default": "Find and manage unsubscribe links in your emails"
                }
              },
              "action": {
                "type": "showTaskpane",
                "sourceLocation": "https://danrhodes.github.io/Outlook-auto-unsubscriber/outlook-addin/src/taskpane/taskpane.html"
              }
            }
          ]
        }
      ]
    }
  ]
}
